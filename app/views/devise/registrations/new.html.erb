  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
      :html=>{:class=> 'signup'}) do |f| %>

    <fieldset>

      <legend class="legend">SLACKIT</legend>

      <div class="input">
        <%= f.text_field :username, placeholder: "Username", autofocus: true %>
        <span class='span-username'><i class="fa fa-user" aria-hidden="true"></i></span>
      </div>

      <div class="input">
        <%= f.email_field :email, placeholder: "Email", class: 'email'%>
        <span><i class="fa fa-envelope-o"></i></span>
      </div>

      <div class="input">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        <span><i class="fa fa-lock"></i></span>
      </div>

      <div class="input">
        <%= f.password_field :password_confirmation, autocomplete: "off", 
                placeholder: "Confirm Password" %>
        <span><i class="fa fa-lock"></i></span>
      </div>

      <%= f.hidden_field :anonymous, value: false %>

      <div>
        <button type="submit" class="submit">
          <i class="fa fa-check" aria-hidden="true"></i>
        </button>        
      </div>

    </fieldset>

  <% end %>

  <%= link_to "Back", new_session_path(resource_name), class: 'back' %>
  
  <%= devise_error_messages! %>